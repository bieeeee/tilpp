{
  "name": "tilpp",
  "displayName": "TIL++",
  "description": "A lightweight in-editor memory tool for capturing 'Today I Learned' (TIL) moments â€” record, recall, and resurface what you've learned, right from the place you learn it.",
  "icon": "icon.png",
  "publisher": "hanbyeolkwon",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other",
    "Notebooks"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "TIL++ Settings",
      "properties": {
        "tilpp.reminderInterval": {
          "type": [
            "number",
            "string"
          ],
          "default": 60,
          "description": "Reminder interval in minutes (or 'never')"
        },
        "tilpp.autoCaptureCommits": {
          "type": "boolean",
          "default": true,
          "description": "Automatically capture commits as TILs"
        },
        "tilpp.commitPatterns": {
          "type": "array",
          "default": ["TIL:", "feat:", "fix:", "discovered", "found out"],
          "description": "Commit message patterns that trigger auto-capture"
        },
        "tilpp.commitTemplate": {
          "type": "string",
          "default": "Committed: {message}",
          "description": "Template for formatting commit messages as TILs"
        },
        "tilpp.includeCommitHash": {
          "type": "boolean",
          "default": true,
          "description": "Include commit hash in TIL"
        },
        "tilpp.notifyOnCommitCapture": {
          "type": "boolean",
          "default": true,
          "description": "Show notification when commit is captured"
        }
      }
    },
    "commands": [
      {
        "command": "tilpp.addTIL",
        "title": "TIL++: Add TIL"
      },
      {
        "command": "tilpp.viewTILs",
        "title": "TIL++: View Saved TILs"
      },
      {
        "command": "tilpp.logLastCommit",
        "title": "TIL++: Log Last Commit as TIL"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0"
  }
}
